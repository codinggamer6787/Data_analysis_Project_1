#importing libraries
import pandas as pd
pd.plotting.register_matplotlib_converters()
import matplotlib.pyplot as plt
%matplotlib inline
import seaborn as sns
print("Setup Complete")

  #connecting the dataset to the collab 
cancer_filepath ="/content/world_smoking_history_1924_2023 (1).csv"
cancer_data= pd.read_csv(cancer_filepath)

#line graph just for trial
sns.lineplot(data=cancer_data);

#This will show overlapping histograms for comparison of male and female smokers percentage.
plt.figure(figsize=(10, 6))
sns.histplot(cancer_data['Male_Smokers_Percentage'], kde=True, color='blue', label='Male Smokers', bins=30, alpha=0.5)
sns.histplot(cancer_data['Female_Smokers_Percentage'], kde=True, color='red', label='Female Smokers', bins=30, alpha=0.5)
plt.title('Overlapping Histograms of Male and Female Smokers')
plt.xlabel('Number of Smokers in Percentage')
plt.ylabel('Frequency')
plt.legend()
plt.show()

#This will show histograms for different variables across different countries.
g = sns.FacetGrid(cancer_data, col="Country", col_wrap=4, height=4)
g.map(sns.histplot, "Male_Smokers_Percentage", kde=True, bins=30)
g.add_legend()
plt.show()

#Comparison of Smokers Percentage and Average Cigarettes Per Day
# Set the width and height of the figure
plt.figure(figsize=(14, 6))
plt.title("Comparison of Smokers Percentage and Average Cigarettes Per Day")
sns.lineplot(data=cancer_data, x='Year', y='Male_Smokers_Percentage', label="Male Smokers (%)")
sns.lineplot(data=cancer_data, x='Year', y='Female_Smokers_Percentage', label="Female Smokers (%)")
ax1 = plt.gca()
ax2 = ax1.twinx()
sns.lineplot(data=cancer_data, x='Year', y='Average_Cigarettes_Per_Day', label="Avg Cigarettes Per Day", ax=ax2, color="green")
ax1.set_xlabel("Year")
ax1.set_ylabel("Smokers Percentage")
ax2.set_ylabel("Average Cigarettes Per Day")
ax1.legend(loc='upper left')
ax2.legend(loc='upper right')
# Display the plot
plt.show()
